<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/addDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide link"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addDialogUrl"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="8dp"

        app:layout_constraintTop_toBottomOf="@id/addDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/addDialogTextCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_light"


        android:text="Target cost"
        app:layout_constraintTop_toBottomOf="@id/addDialogUrl"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addDialogCost"
        android:layout_width="150dp"
        android:layout_height="36dp"

        android:layout_margin="8dp"
        android:inputType="numberDecimal"

        app:layout_constraintTop_toBottomOf="@id/addDialogTextCost"
        app:layout_constraintStart_toStartOf="parent"


</androidx.constraintlayout.widget.ConstraintLayout>