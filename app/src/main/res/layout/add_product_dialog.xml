<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/addDialogName"
        android:layout_width="match_parent"
        android:layout_height="42dp"

                android:layout_margin="8dp"

        android:hint="Name"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/addDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide link"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"

        app:layout_constraintTop_toBottomOf="@id/addDialogName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addDialogUrl"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="8dp"

        app:layout_constraintTop_toBottomOf="@id/addDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/addDialogTextCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/teal_200"


        android:text="Target cost"
        app:layout_constraintTop_toBottomOf="@id/addDialogUrl"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/addDialogCost"
        android:layout_width="150dp"
        android:layout_height="42dp"

        android:layout_margin="8dp"
        android:inputType="number"
        android:digits="$1234567890"
        android:hint="$"

        app:layout_constraintTop_toBottomOf="@id/addDialogTextCost"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>